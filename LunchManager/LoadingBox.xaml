<Window x:Class="LunchManager.LoadingBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LunchManager"
        mc:Ignorable="d"
        Title="Loading..." Height="150" Width="300" WindowStyle="None" ResizeMode="NoResize" Cursor="Wait"
        Topmost="True" 
        ScrollViewer.VerticalScrollBarVisibility="Disabled" 
        Background="White" 
        WindowStartupLocation="CenterOwner" 
        BorderBrush="#FF727272" 
        VerticalContentAlignment="Top" 
        BorderThickness="1,1,1,1" 
        ShowInTaskbar="False">
    <Grid>
        <ProgressBar HorizontalAlignment="Center" Height="15" Margin="0,76,0,0" VerticalAlignment="Top" Width="200" IsIndeterminate="True"/>
        <TextBlock x:Name="txtMessage" Text="Loading, please wait" HorizontalAlignment="Center" Margin="0,45,0,0" VerticalAlignment="Top" MinWidth="118"/>
    </Grid>
</Window>
